<%- include('../templates/authTemplate.ejs') %>
    <div class="login-loc">
        <div class="content">
            <div class="heading">REGISTRATION</div>
            <div class="main-content">
                <form autocomplete="off" action="/authentication/register" method="post">
                    <div>
                        <input type="text" name="username" required/>
                        <span>&nbsp;&nbsp;Username</span>
                    </div>
                    <div>
                        <select name="department" id="" required>
                            <option value="" hidden></option>
                            <option value="CSE">Computer Science &amp; Engineering</option>
                            <option value="MECH">Mechanical Engineering</option>
                            <option value="ECE">Electronics &amp; Communication Engg</option>
                            <option value="CIVIL">Civil Engineering</option>
                            <option value="EEE">Electrical &amp; Electronics Engineering</option>
                        </select>
                        <span>&nbsp;&nbsp;Department</span>
                    </div>
                    <div>
                        <input type="password" name="password" required/>
                        <span>&nbsp;&nbsp;Password</span>
                    </div>
                    <button type="submit">Register</button>
                    <p class="error-msg">
                        <% if (error !=null || error!=undefined){%>
                            <%=error%>
                                <%}%>
                    </p>
                </form>
            </div>
            <div class="links">
                <a href="/authentication/login">Login</a>
                <a href="/authentication/forgot-pass">Forgot Password</a>
            </div>
        </div>
    </div>
    </div>
    <footer>&copy; Designed &amp; Developed by iSPIN of CSE Department</footer>
    </body>

    </html>
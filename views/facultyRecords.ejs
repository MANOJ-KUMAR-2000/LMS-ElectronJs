<%- include('../templates/mainPage.ejs') %>
    <div class="faculty-record-main-content record-main">
        <h1>FACULTY RECORDS</h1>
        <%- include('../templates/recordLinks.ejs') %>

            <div class="faculty-record-filters">
                <form action="/record/faculty" method="post">
                    <div>
                        <span>Faculty Id</span>
                        <input type="text" name="search_roll_number">
                    </div>
                    <button type="submit">Search</button>
                </form>

            </div>
            <div class="faculty-recod-details">
                <table>
                    <thead>
                        <tr>
                            <th>Faculty ID</th>
                            <th>Book ID</th>
                            <th>Book Name</th>
                            <th>Date Issued</th>
                            <th>Validatation Untill</th>
                        </tr>
                    </thead>
                    
                    <tbody>
                        <% for(var i=0; i < facultys.length; i++) { %>
                            <tr>
                              <td><%= facultys[i].roll_number %></td>
                              <td><%= facultys[i].book_id %></td>
                              <td><%= facultys[i].book_title %></td>
                              <td><%= facultys[i].date %></td>
                              <td><%= facultys[i].validation_date %></td>
                            </tr>
                         <% } %>
                    </tbody>
                </table>
            </div>
    </div>


    <!--Template Ending-->
    </div>
    </div>

    </body>

    </html>